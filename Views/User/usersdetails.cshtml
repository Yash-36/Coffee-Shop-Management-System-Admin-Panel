@{
    ViewData["Title"] = "User Details Page";
}

@using System.Data
@model DataTable

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Data Tables</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">User Details</li>
            </ol>
        </nav>

    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">               
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">User List</h5>
                            <div>
                                <a class="btn btn-outline-primary" asp-controller="ExportToExcel" asp-action="ExportToExcel" asp-route-table="User">
                                    <i class="bi bi-filetype-xlsx"></i>Export
                                </a>
                            </div>
                        </div>
                        <h6>
                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-success text-success">
                                    @TempData["Message"]
                                </div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger text-danger">
                                    @TempData["ErrorMessage"]
                                </div>
                            }
                        </h6>
                        <div class="table-responsive">
                            <!-- Table with stripped rows -->
                            <table class="table datatable">
                                <thead>
                                    <tr>
                                        <th>
                                            <b>U</b>ser_Id
                                        </th>
                                        <th>UserName</th>
                                        <th>Email</th>
                                        <th>Password</th>
                                        <th>Mobile_No</th>
                                        <th>Address</th>
                                        <th>IsActive</th>
                                        <th colspan="2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Rows.Count > 0){
                                        @foreach (DataRow dr in Model.Rows)
                                        {
                                            <tr class="text-center">
                                                <td>@dr["UserID"]</td>
                                                <td>@dr["UserName"]</td>
                                                <td>@dr["Email"]</td>
                                                <td>@dr["Password"]</td>
                                                <td>@dr["MobileNo"]</td>
                                                <td>@dr["Address"]</td>
                                                <td>@dr["IsActive"]</td>                                        
                                                <td class="d-flex">
                                                    @* <button class="btn btn-warning">Edit</button> *@
                                                    <a class="btn btn-warning btn-sm me-2" asp-controller="User" asp-action="AddUser" asp-route-UserID="@dr["UserID"]">
                                                        <i class="bi bi-pencil-fill"></i>
                                                    </a>
                                                    <span class="btn btn-danger btn-sm" onclick="confirmDelete(@dr["UserID"])">
                                                        <i class="bi bi-x"></i>
                                                    </span>
                                                    @* <button class="btn btn-danger">Delete</button> *@
                                                </td>
                                            </tr>
                                        }   
                                    } 
                                    else
                                    {
                                        <tr>
                                            <td colspan="5" class="text-center">
                                                <p class="col-form-label">No Record Found</p>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->

<script>
    function confirmDelete(userID) {
        if (confirm('Are you sure you want to delete this user ? ')) {
            window.location.href = "/User/UserDelete?UserID=" + userID;
        }
    }
</script>