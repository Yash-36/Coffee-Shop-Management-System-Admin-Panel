@{
    ViewData["Title"] = "Add Customer Page";
}

@model CustomerModel;

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Add Order</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Add Customer</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Customer</h5>
                    <h4 class="font-green-sharp">@TempData["Message"]</h4>
                    <!-- Multi Columns Form -->
                    <form class="row g-3" method="post" asp-action="save" asp-controller="Customer">
                        @if (Model.CustomerID != null)
                        {
                            <input type="hidden" asp-for="CustomerID" />
                        }
                       
                        <div class="col-md-12">
                            <label for="CustomerName" class="form-label"><span class="text-danger">*</span>Customer Name</label>
                            <input type="text" class="form-control" asp-for="CustomerName" id="CustomerName" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label for="HomeAddress" class="form-label"><span class="text-danger">*</span>Home Address</label>
                            <input type="text" class="form-control" asp-for="HomeAddress" id="HomeAddress" />
                            <span asp-validation-for="HomeAddress" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label for="Email" class="form-label"><span class="text-danger">*</span>Email</label>
                            <input type="email" class="form-control" asp-for="Email" id="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label for="MobileNo" class="form-label"><span class="text-danger">*</span>Mobile No</label>
                            <input type="text" class="form-control" asp-for="MobileNo" id="MobileNo" />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="GSTNO" class="form-label"><span class="text-danger">*</span>GST NO</label>
                            <input type="text" class="form-control" asp-for="GST_NO" id="GSTNO" />
                            <span asp-validation-for="GST_NO" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="CityName" class="form-label"><span class="text-danger">*</span>City Name</label>
                            <input type="text" class="form-control" asp-for="CityName" id="CityName" />
                            <span asp-validation-for="CityName" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="PinCode" class="form-label"><span class="text-danger">*</span>PinCode</label>
                            <input type="text" class="form-control" asp-for="PinCode" id="PinCode" />
                            <span asp-validation-for="PinCode" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label for="NetAmount" class="form-label"><span class="text-danger">*</span>Net Amount</label>
                            <input type="text" class="form-control" asp-for="NetAmount" id="NetAmount" />
                            <span asp-validation-for="NetAmount" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label for="UserID" class="form-label"><span class="text-danger">*</span>UserName</label>  
                            <select class="form-control" asp-for="UserID">
                                <option value="">Select User</option>
                                @foreach (var User in ViewBag.UserList)
                                {
                                    <option value="@User.UserID">@User.UserName</option>
                                }
                            </select>
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a class="btn btn-secondary" asp-controller="Customer" asp-action="Customerdetail">Cancel</a>
                        </div>
                    </form><!-- End Multi Columns Form -->

                </div>
            </div>
        </div>
    </div>

</main>